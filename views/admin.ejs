    <!-- Upload Project -->
<section id="uploadProject" style="display:none;">
  <div class="card shadow-sm " style="border:1px solid #ff6600">
    <h4 class="section-title mt-4 mb-0 text-center">Upload Project</h4>
    <div class="card-body p-4">
      <form method="POST" action="/admin/projects" class="row g-4 needs-validation" novalidate>
        
        <!-- Row 1 -->
        <div class="col-md-6">
          <label class="form-label fw-semibold">Project Title</label>
          <input type="text" name="title" class="form-control" placeholder="Enter project title" required>
        </div>
        
        <div class="col-md-6">
          <label class="form-label fw-semibold">Description</label>
          <input type="text" name="description" class="form-control" placeholder="Enter short description" required>
        </div>

        <!-- Row 2 -->
        <div class="col-md-6">
          <label class="form-label fw-semibold">Download Link</label>
          <input type="url" name="downloadLink" class="form-control" placeholder="Paste download link" required>
        </div>
        
        <div class="col-md-6">
          <label class="form-label fw-semibold">Upload Link</label>
          <input type="url" name="uploadLink" class="form-control" placeholder="Paste upload link" required>
        </div>

        <!-- Row 3 -->
        <div class="col-md-6">
          <label class="form-label fw-semibold">Batch</label>
          <select name="batch_no" class="form-select" required>
            <option value="" disabled selected>Select Batch</option>
            <% batches.forEach(b => { %>
              <option value="<%= b %>"><%= b %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-6">
          <label class="form-label fw-semibold">Week</label>
          <select name="week" class="form-select" required>
            <option value="" disabled selected>Select Week</option>
            <% for (let i = 1; i <= 8; i++) { %>
              <% if (i !== 5 && i !== 7) { %>
                <option value="<%= i %>">Week <%= i %></option>
              <% } %>
            <% } %>
          </select>
        </div>

        <!-- Button Row -->
        <div class="col-12 text-center mt-3">
          <button class="btn btn-primary px-5 py-2 ">
            Create Project
          </button>
        </div>

      </form>
    </div>
  </div>
</section>





<!-- View Interns Section -->
<section id="viewInterns" style="display:none;">
  <div class="container px-0">
    <div class="card shadow-sm border rounded p-3" style="border : 1px solid #ff6600 !important;">
      
      <!-- Section Header -->
      <h4 class="text-center mb-4">Interns <%= admin.domain %></h4>

      <!-- Filters Row -->
      <div class="row mb-3 g-2 justify-content-center ">
        <div class="col-md-2">
          <select id="batchFilter" class="form-select" onchange="applyInternFilters()">
            <option value="all" selected>All Batches</option>
            <% batches.forEach(batch => { %>
              <option value="<%= batch %>">Batch <%= batch %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-2 flex-grow-1">
          <input type="text" id="internSearch" class="form-control" placeholder="Enter Intern ID" onkeyup="applyInternFilters()">
        </div>
        <div class="col-md-2">
          <button class="btn btn-secondary w-100" onclick="clearInternFilters()">Clear Filters</button>
        </div>
      </div>

      <!-- Intern Table -->
      <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
        <table class="table table-striped table-bordered align-middle text-center mb-0">
          <!-- Sticky Table Header -->
          <thead class="table-light" style="position: sticky; top: 0; z-index: 2;">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Duration</th>
              <th>Intern ID</th>
              <th>Batch No</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% interns.forEach(i => { %>
              <tr class="intern-row" data-batch="<%= i.batch_no %>">
                <td><%= i.name %></td>
                <td><%= i.email %></td>
                <td><%= i.duration %> Weeks</td>
                <td class="intern-id"><%= i.intern_id %></td>
                <td><%= i.batch_no %></td>
                <td class="d-flex justify-content-evenly">
                  <a href="/admin/intern/<%= i._id %>" class="btn btn-outline-primary btn-sm px-3 rounded-pill shadow-sm" target="_blank">View</a>
                  <button class="btn btn-outline-secondary btn-sm px-3 rounded-pill" data-bs-toggle="modal" data-bs-target="#updateModal<%= i._id %>">Update</button>
                </td>
              </tr>

              <!-- Update Intern Modal -->
              <div class="modal fade" id="updateModal<%= i._id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Update <%= i.name.trim() %></h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/update-user/<%= i._id %>" method="POST" class="needs-validation" novalidate>
                      <div class="modal-body">
                        <div class="row">
                          <!-- Name + Email -->
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Name:</label>
                            <input type="text" name="name" class="form-control" value="<%= i.name %>" required>
                          </div>
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Email:</label>
                            <input type="email" name="email" class="form-control" value="<%= i.email %>" required>
                          </div>
                          <!-- Phone + College -->
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Phone:</label>
                            <input type="text" name="phone" class="form-control" value="<%= i.phone %>">
                          </div>
                          <div class="col-md-6 mb-2">
                            <label class="form-label">College:</label>
                            <input type="text" name="college" class="form-control" value="<%= i.college %>">
                          </div>
                          <!-- Reset Password + Certificate ID -->
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Reset Password:</label>
                            <input type="text" name="password" class="form-control" placeholder="Enter new password (leave blank if unchanged)">
                          </div>
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Certificate ID:</label>
                            <input type="text" name="certificate_id" class="form-control" value="<%= i.certificate_id %>">
                          </div>
                          <!-- University + Course -->
                          <div class="col-md-6 mb-2">
                            <label class="form-label">University:</label>
                            <input type="text" name="university" class="form-control" value="<%= i.university %>">
                          </div>
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Course:</label>
                            <input type="text" name="course" class="form-control" value="<%= i.course %>">
                          </div>
                          <!-- Branch + Year/Sem -->
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Branch:</label>
                            <input type="text" name="branch" class="form-control" value="<%= i.branch %>">
                          </div>
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Y/S:</label>
                            <input type="text" name="year_sem" class="form-control" value="<%= i.year_sem %>">
                          </div>
                          <!-- Duration + Intern ID -->
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Duration:</label>
                            <input type="text" name="duration" class="form-control" value="<%= i.duration %>">
                          </div>
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Intern ID:</label>
                            <input type="text" name="intern_id" class="form-control" value="<%= i.intern_id %>" readonly>
                          </div>
                          <!-- Offer Letter + Certificate Link -->
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Offer Letter Link:</label>
                            <input type="text" name="offer_letter" class="form-control" value="<%= i.offer_letter %>">
                          </div>
                          <div class="col-md-6 mb-2">
                            <label class="form-label">Certificate Link:</label>
                            <input type="text" name="certificate_link" class="form-control" value="<%= i.certificate_link %>">
                          </div>
                        </div>
                      </div>
                      <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-danger btn-sm px-3  shadow-sm" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-warning btn-sm px-3  shadow-sm">Update</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>





