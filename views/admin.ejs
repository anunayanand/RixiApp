<script>
document.addEventListener('DOMContentLoaded', () => {
  const searchInput = document.getElementById('searchQuiz');
  const filterWeek = document.getElementById('filterWeek');
  const tableBody = document.getElementById('quizTableBody');

  // Filter/Search quizzes
  function filterQuizzes() {
    const searchTerm = searchInput.value.toLowerCase();
    const weekFilter = filterWeek.value;

    tableBody.querySelectorAll('tr').forEach(row => {
      const title = row.cells[1].innerText.toLowerCase();
      const week = row.cells[2].innerText;

      const matchesSearch = title.includes(searchTerm);
      const matchesWeek = !weekFilter || week === weekFilter;

      row.style.display = matchesSearch && matchesWeek ? '' : 'none';
    });
  }

  searchInput.addEventListener('input', filterQuizzes);
  filterWeek.addEventListener('change', filterQuizzes);
});
</script>











