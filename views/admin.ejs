<script>
(function() {
  const questionSlides = document.getElementById('questionSlides');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const deleteBtn = document.getElementById('deleteBtn');
  const submitBtn = document.getElementById('submitBtn');
  const progressBar = document.getElementById('quizProgress');
  let currentSlide = 0;

  // Create slide DOM for index
  function createQuestionSlide(index) {
    const slide = document.createElement('div');
    slide.className = 'question-slide border rounded p-3 mb-3';
    slide.dataset.index = index;

    slide.innerHTML = `
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h6 class="mb-0">Question ${index + 1}</h6>
        <small class="text-muted">Slide ${index + 1}</small>
      </div>

      <div class="mb-2">
        <input type="text" name="questions[${index}][questionText]" class="form-control" placeholder="Enter question text" required />
      </div>

      <div class="row g-2 mb-2">
        <div class="col-6">
          <input type="text" name="questions[${index}][options][]" class="form-control" placeholder="Option A" required />
        </div>
        <div class="col-6">
          <input type="text" name="questions[${index}][options][]" class="form-control" placeholder="Option B" required />
        </div>
        <div class="col-6 mt-2">
          <input type="text" name="questions[${index}][options][]" class="form-control" placeholder="Option C" required />
        </div>
        <div class="col-6 mt-2">
          <input type="text" name="questions[${index}][options][]" class="form-control" placeholder="Option D" required />
        </div>
      </div>

      <div class="row g-2 align-items-center mb-2">
        <div class="col-md-6">
          <select name="questions[${index}][correctAnswer]" class="form-select" required>
            <option value="" selected disabled>Select Correct Answer</option>
            <option value="0">A</option>
            <option value="1">B</option>
            <option value="2">C</option>
            <option value="3">D</option>
          </select>
        </div>
        <div class="col-md-6">
          <input type="file" name="images" accept="image/*" class="form-control" />
          
        </div>
      </div>
    `;

    questionSlides.appendChild(slide);
  }

  // Re-index slides (names + headings) after deletion
  function reindexSlides() {
    const slides = document.querySelectorAll('.question-slide');
    slides.forEach((slide, idx) => {
      slide.dataset.index = idx;
      slide.querySelector('h6').innerText = `Question ${idx + 1}`;
      // Update all input names inside this slide
      slide.querySelectorAll('input, select').forEach(input => {
        if (!input.name) return;
        input.name = input.name.replace(/questions\[\d+\]/, `questions[${idx}]`);
      });
    });
  }

  // Show slide i
  function showSlide(i) {
    const slides = document.querySelectorAll('.question-slide');
    if (slides.length === 0) return;
    if (i < 0) i = 0;
    if (i > slides.length - 1) i = slides.length - 1;
    currentSlide = i;

    slides.forEach((s, idx) => s.style.display = idx === i ? 'block' : 'none');

    prevBtn.style.display = i === 0 ? 'none' : 'inline-block';
    deleteBtn.style.display = slides.length > 1 ? 'inline-block' : 'none';
    nextBtn.style.display = i === slides.length - 1 ? 'inline-block' : 'inline-block'; // always show next
    submitBtn.style.display = i === slides.length - 1 ? 'inline-block' : 'none';

    // progress
    const percent = Math.round(((i + 1) / slides.length) * 100);
    progressBar.style.width = percent + '%';
    progressBar.innerText = `Question ${i + 1} of ${slides.length}`;
  }

  // Next click: if last slide -> create new slide and go to that new slide.
  // (Per the last agreed UX: create new blank slide and stay on that new slide.)
  nextBtn.addEventListener('click', () => {
    const slides = document.querySelectorAll('.question-slide');
    if (currentSlide === slides.length - 1) {
      // create new blank slide
      createQuestionSlide(slides.length);
      // show the newly created slide
      showSlide(slides.length);
    } else {
      showSlide(currentSlide + 1);
    }
  });

  prevBtn.addEventListener('click', () => {
    showSlide(currentSlide - 1);
  });

  // Delete current slide
  deleteBtn.addEventListener('click', () => {
    const slides = document.querySelectorAll('.question-slide');
    if (slides.length <= 1) return; // keep at least 1
    slides[currentSlide].remove();
    reindexSlides();
    // adjust currentSlide if needed
    const newSlides = document.querySelectorAll('.question-slide');
    if (currentSlide > newSlides.length - 1) currentSlide = newSlides.length - 1;
    showSlide(currentSlide);
  });

  // initialize with one slide
  createQuestionSlide(0);
  showSlide(0);

  // Optional: prevent accidental submit if last slide inputs are empty
  document.getElementById('quizForm').addEventListener('submit', function(e) {
    // Basic check: at least one question has text and 4 options and correctAnswer set
    const slides = document.querySelectorAll('.question-slide');
    let valid = false;
    slides.forEach(slide => {
      const q = slide.querySelector(`input[name^="questions"][name$="[questionText]"]`);
      const opts = slide.querySelectorAll(`input[name^="questions"][name$="[options][]"]`);
      const corr = slide.querySelector(`select[name^="questions"][name$="[correctAnswer]"]`);
      if (q && q.value.trim() !== "" && opts.length === 4 && corr && corr.value !== "") {
        valid = true;
      }
    });
    if (!valid) {
      e.preventDefault();
  
    }
  });

})();
</script>

