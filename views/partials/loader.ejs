<style>
  #rixiLoaderOverlay {
    position: fixed;
    inset: 0;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999;
    opacity: 1;
    visibility: visible;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  body.dark-mode #rixiLoaderOverlay {
    background: rgba(15, 15, 20, 0.8);
  }

  #rixiLoaderOverlay.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .rixi-minimal-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(255, 102, 0, 0.2);
    border-top-color: #ff6600;
    border-radius: 50%;
    animation: minimalSpin 0.8s linear infinite;
  }

  @keyframes minimalSpin {
    to { transform: rotate(360deg); }
  }
</style>

<div id="rixiLoaderOverlay">
  <div class="rixi-minimal-spinner"></div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const loaderOverlay = document.getElementById("rixiLoaderOverlay");
    
    // Hide loader on load
    window.addEventListener("load", () => {
      if (loaderOverlay) {
        loaderOverlay.classList.add("hidden");
        // Remove from flow after transition
        setTimeout(() => { loaderOverlay.style.display = "none"; }, 300);
      }
    });

    // Show loader when navigating away
    window.addEventListener("beforeunload", () => {
      if (loaderOverlay) {
        loaderOverlay.style.display = "flex";
        // Force reflow
        void loaderOverlay.offsetWidth;
        loaderOverlay.classList.remove("hidden");
      }
    });

    // Attach click listeners to standard links to show loader immediately
    document.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", (e) => {
        const href = link.getAttribute("href");
        // Only target normal navigation links
        if (href && !href.startsWith("#") && !href.startsWith("javascript") && link.target !== "_blank" && !link.dataset.bsToggle && !link.dataset.bsTarget) {
          if (loaderOverlay) {
            loaderOverlay.style.display = "flex";
            void loaderOverlay.offsetWidth;
            loaderOverlay.classList.remove("hidden");
          }
        }
      });
    });
  });
</script>
